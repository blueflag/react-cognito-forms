{
    "presets": [
        "react",
        "es2015",
        "stage-3"
    ],
    "plugins": [
        "transform-strict-mode",
        "transform-class-properties",
        "transform-runtime"
    ],
    "env": {
        "development": {
            "plugins": [
                ["react-transform", {
                    "transforms": [{
                        "transform": "react-transform-hmr",
                        "imports": ["react"],
                        "locals": ["module"]
                    }, {
                        "transform": "react-transform-catch-errors",
                        "imports": ["react", "redbox-react"]
                    }]
                }]
            ]
        }
    }
}
